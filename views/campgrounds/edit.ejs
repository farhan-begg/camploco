<% layout('layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
      <div>
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          placeholder="Yosimete"
          name="campground[title]"
          value="<%= campground.title %>"
          required
        />
      </div>
      <div>
        <label for="location">Location</label>
        <input type="text" id="title" placeholder="San Fransisco, CA"
        name="campground[location]" value="<%= campground.location %>"required>
      </div>

      <button>Update Campground</button>

      <a href="/campgrounds/<%= campground._id %>">Back to Campgrounds</a>
    </form>

